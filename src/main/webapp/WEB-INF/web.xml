<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="4.0"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
   http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>StartUpServlet</servlet-name>
        <servlet-class>ru.mail.romanov1234567890987.controller.StartUpServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>AllUsersServlet</servlet-name>
        <servlet-class>ru.mail.romanov1234567890987.controller.AllUsersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AllUsersServlet</servlet-name>
        <url-pattern>/allUsers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddUserFormServlet</servlet-name>
        <servlet-class>ru.mail.romanov1234567890987.controller.AddUserFormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddUserFormServlet</servlet-name>
        <url-pattern>/addUserForm</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddUserServlet</servlet-name>
        <servlet-class>ru.mail.romanov1234567890987.controller.AddUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddUserServlet</servlet-name>
        <url-pattern>/addUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteUserServlet</servlet-name>
        <servlet-class>ru.mail.romanov1234567890987.controller.DeleteUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteUserServlet</servlet-name>
        <url-pattern>/deleteUser</url-pattern>
    </servlet-mapping>
</web-app>
